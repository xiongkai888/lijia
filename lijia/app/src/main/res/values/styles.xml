    <!--10dF4线，没边框-->
    <style name="line_H10dp_on">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/d_10dp</item>
        <item name="android:background">@color/colorF4F4</item>
    </style>

    <!--直线-->
    <style name="line_H1dp_divider" parent="line_H1dp">
        <item name="android:background">@color/divider</item>
    </style>

    <!--直线(垂直)-->
    <style name="line_v1dp_divider">
        <item name="android:background">@color/divider</item>
        <item name="android:layout_width">0.5dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!--直线1dp-->

    <style name="line_H1dp">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.3dp</item>
    </style>

    <!--背景白色，有底部边框-->
    <style name="ll_bottom_h" parent="h_match_parent">
        <item name="android:background">@drawable/border_bottom_divider</item>
    </style>

    <!--背景白色，有底部边框-->
    <style name="ll_bottom_v" parent="ll_bottom_h">
        <item name="android:gravity">center_vertical</item>
    </style>

    <!--背景白色，没有边框-->
    <style name="ll_no_border" parent="h_match_parent">
        <item name="android:gravity">center_vertical</item>
    </style>

    <!--背景白色，有底部边框 个人资料-->
    <style name="ll_bottom_personal" parent="ll_bottom_h">
        <item name="android:paddingLeft">@dimen/d_10dp</item>
        <item name="android:paddingTop">@dimen/d_12dp</item>
        <item name="android:paddingBottom">@dimen/d_12dp</item>
    </style>

    <style name="in_right_icon" parent="text">
        <item name="android:layout_marginRight">@dimen/d_10dp</item>
        <item name="android:src">@drawable/in_right</item>
    </style>

    <style name="editText_login_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">@dimen/d_10dp</item>
        <item name="android:paddingTop">@dimen/d_10dp</item>
        <item name="android:lines">1</item>
        <item name="android:background">@null</item>
        <item name="android:textColorHint">@color/color999</item>
    </style>


    <style name="button_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/button_h</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/button_corners</item>
        <item name="android:layout_marginLeft">@dimen/d_15dp</item>
        <item name="android:layout_marginRight">@dimen/d_15dp</item>
        <item name="android:layout_marginTop">@dimen/d_10dp</item>
        <item name="android:layout_marginBottom">@dimen/d_10dp</item>
    </style>

    <style name="only_EditText_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingRight">@dimen/d_2dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@null</item>
        <item name="android:textColorHint">@color/color999</item>
    </style>

    <style name="in_image" parent="text">
        <item name="android:layout_marginRight">@dimen/d_10dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:src">@drawable/in_right</item>
    </style>

    <style name="setting_text" parent="text_weight">
        <item name="android:textColor">@color/color666</item>
        <item name="android:paddingTop">@dimen/d_12dp</item>
        <item name="android:paddingBottom">@dimen/d_12dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!--背景白色，有上下边框-->
    <style name="LL_h_border_bottom_and_top">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/border_bottom_top_1dp_bg_white</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!--相册底部弹框-->
    <style name="ActionSheetDialogStyle" parent="@android:style/Theme.Dialog">
        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- 浮于Activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- Dialog以外的区域模糊效果 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- Dialog进入及退出动画 -->
        <item name="android:windowAnimationStyle">@style/ActionSheetDialogAnimation</item>
    </style>

    <!-- ActionSheet进出动画 -->
    <style name="ActionSheetDialogAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/actionsheet_dialog_in</item>
        <item name="android:windowExitAnimation">@anim/actionsheet_dialog_out</item>
    </style>

</resources>
