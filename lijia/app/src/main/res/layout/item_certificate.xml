<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/v_match_parent_no">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/certificate_iv"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginBottom="@dimen/d_10dp"
            android:layout_marginLeft="@dimen/d_30dp"
            android:layout_marginRight="@dimen/d_30dp"
            android:layout_marginTop="@dimen/d_20dp"
            android:scaleType="fitXY"
            android:src="@drawable/default_pic" />


        <ImageView
            android:id="@+id/close_iv"
            style="@style/text"
            android:layout_width="@dimen/d_30dp"
            android:layout_height="@dimen/d_30dp"
            android:layout_gravity="right"
            android:layout_margin="@dimen/d_10dp"
            android:src="@drawable/camera_close" />

    </FrameLayout>

    <TextView
        android:id="@+id/name_tv"
        style="@style/text14color33cea6"
        android:layout_gravity="center_horizontal"
        android:text="证书一" />

</LinearLayout>
