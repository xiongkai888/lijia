<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/v_all_match_parent_no"
    android:background="@color/color2d2e38"
    tools:context="com.lanmei.lijia.ui.home.activity.OrderReceivingSetActivity">

    <include layout="@layout/include_centertitletoolbar" />

    <LinearLayout
        android:id="@+id/ll_money"
        style="@style/h_match_parent_no"
        android:layout_marginLeft="@dimen/d_20dp"
        android:layout_marginRight="@dimen/d_20dp"
        android:layout_marginTop="@dimen/d_30dp"
        android:background="@color/color272933"
        android:padding="@dimen/d_10dp">

        <TextView
            style="@style/text_weight"
            android:text="最低上门费"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/money_tv"
            android:hint="@string/please_choose"
            android:gravity="right"
            android:textColorHint="@color/white"
            style="@style/text14color33cea6" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_distance"
        style="@style/h_match_parent_no"
        android:layout_marginLeft="@dimen/d_20dp"
        android:layout_marginRight="@dimen/d_20dp"
        android:layout_marginTop="@dimen/d_10dp"
        android:background="@color/color272933"
        android:padding="@dimen/d_10dp">

        <TextView
            style="@style/text_weight"
            android:text="离服务距离"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/distance_tv"
            android:hint="@string/please_choose"
            android:gravity="right"
            android:textColorHint="@color/white"
            style="@style/text14color33cea6" />

    </LinearLayout>

    <LinearLayout
        style="@style/h_match_parent_no"
        android:layout_marginLeft="@dimen/d_20dp"
        android:layout_marginRight="@dimen/d_20dp"
        android:layout_marginTop="@dimen/d_10dp"
        android:layout_weight="1"
        android:paddingLeft="@dimen/d_10dp"
        android:paddingTop="@dimen/d_10dp">

        <TextView
            style="@style/text_weight"
            android:text="是否当天处理"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/switch_iv"
            style="@style/text"
            android:src="@drawable/switch_off" />

    </LinearLayout>


    <Button
        android:id="@+id/save_bt"
        style="@style/button_style"
        android:layout_marginBottom="@dimen/d_20dp"
        android:text="@string/save" />

</LinearLayout>
