<?xml version="1.0" encoding="utf-8"?>
<com.lanmei.lijia.view.ChangePhoneView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorF4F4">

    <TextView
        android:id="@+id/title_tv"
        android:padding="20dp"
        android:text="@string/change_phone_code"
       style="@style/text16color4D4D" />

    <TextView
        style="@style/line_H1dp_divider" />

    <EditText
        android:id="@+id/phone_et"
        style="@style/text16color4D4D"
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:gravity="center"
        android:inputType="phone"
        android:maxLength="11"
        android:paddingBottom="10dp"
        android:paddingTop="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal">


        <EditText
            android:id="@+id/code_et"
            android:background="@color/white"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_marginRight="10dp"
            android:padding="10dp"
            android:inputType="number"
            android:maxLength="6"
            android:hint="@string/input_code"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/obtain_code_tv"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:background="@color/color33cea6"
            android:text="获取验证码"
            style="@style/text14colorWhite"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_height="match_parent" />

    </LinearLayout>

    <Button
        android:id="@+id/bt_next_step"
        style="@style/button_style"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="30dp"
        android:text="下一步" />

</com.lanmei.lijia.view.ChangePhoneView>
