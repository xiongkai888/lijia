<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/v_match_parent">

    <LinearLayout
        style="@style/h_match_parent_no"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/compile_iv"
            style="@style/text"
            android:layout_marginLeft="@dimen/d_5dp"
            android:src="@drawable/pay_off" />

        <LinearLayout
            style="@style/v_match_parent_no"
            android:layout_margin="@dimen/d_10dp">

            <LinearLayout style="@style/h_match_parent_no">

                <TextView
                    android:id="@+id/read_tv"
                    android:layout_width="@dimen/d_5dp"
                    android:layout_height="@dimen/d_5dp"
                    android:background="@drawable/circle_message" />

                <TextView
                    android:id="@+id/title_tv"
                    style="@style/text_weight"
                    android:ellipsize="end"
                    android:maxLines="2" />

                <TextView
                    android:id="@+id/time_tv"
                    style="@style/text12color999" />

            </LinearLayout>

            <TextView
                android:id="@+id/content_tv"
                style="@style/text14color999"
                android:layout_marginTop="@dimen/d_5dp"
                android:text="" />

        </LinearLayout>


    </LinearLayout>

    <TextView style="@style/line_H1dp_divider" />

    <TextView
        android:id="@+id/immediately_check_tv"
        style="@style/text14color33cea6"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="@dimen/d_10dp"
        android:text="@string/immediately_check" />

    <TextView style="@style/line_H10dp_on" />

</LinearLayout>
